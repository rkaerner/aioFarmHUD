<modDesc descVersion="21">
	<author>Bauer Hannsen</author>
	<version>1.0.0</version>
	<annotation>whole mod inspired by Monax Company, fozzy691 & DjiZon, Syrius</annotation>
	<title>
		<de>All in one Farm HUD</de>
		<en>All in one Farm HUD</en>
	</title>
	<description>
		<de><![CDATA[Zeigt die Füllstände der Silos und Informationen über Tiere in einem extra HUD.]]></de>
		<en><![CDATA[Shows the Silo Amounts and informations about animals in an extra HUD.]]></en>
	</description>
	<multiplayer supported="true" />
	<iconFilename>store.dds</iconFilename>

	<extraSourceFiles>
		<sourceFile filename="aioFarmHUD.lua" />
	</extraSourceFiles>
	
	<inputBindings>
		<input name="TOGGLE_FARMHUD" category="ONFOOT VEHICLE" key1="KEY_lalt KEY_KP_multiply" key2="" button="" device="0" mouse="" />
		<input name="TOGGLE_FARMHUD_ALT" category="ONFOOT VEHICLE" key1="KEY_lalt KEY_h" key2="" button="" device="0" mouse="" />
	</inputBindings>
	
	<l10n>
